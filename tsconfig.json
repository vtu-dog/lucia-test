{
  "extends": "./.svelte-kit/tsconfig.json",
  "compilerOptions": {
    "allowJs": true,
    "checkJs": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["es2020", "DOM", "DOM.Iterable"],
    "moduleResolution": "node",
    "module": "es2020",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "target": "esnext",
    "paths": {
      "$components": ["./src/components"],
      "$components/*": ["./src/components/*"],
      "$models": ["./src/models"],
      "$models/*": ["./src/models/*"],
      "$common": ["./src/common"],
      "$common/*": ["./src/common/*"],
      "$stores": ["./src/stores"],
      "$stores/*": ["./src/stores/*"]
    }
  }
}
